{
  "author": "Abdur Razzak",
  "license": "ISC",
  "name": "elysiajs-backend-template",
  "version": "1.0.0",
  "description": "ElysiaJS backend template with Mongoose and TypeScript",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint:format": "prettier --list-different \"src/**/*.{ts,js,json}\""
  },
  "keywords": [
    "elysiajs",
    "mongoose",
    "typescript",
    "bun"
  ],
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.4",
    "elysia": "^1.1.29",
    "elysia-rate-limit": "^4.5.0",
    "mongoose": "^8.8.4",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/validator": "^13.15.10",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3"
  }
}
